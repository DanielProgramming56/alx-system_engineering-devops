#!/bin/bash

# Function to get subdomain info
get_subdomain_info() {
    local domain=$1
    local subdomain=$2
    local full_domain="${subdomain}.${domain}"
    
    # Use dig to get DNS info and filter relevant lines with awk
    local result=$(dig +short "$full_domain")
    local record_type="A"  # Assuming A record for simplicity
    
    if [ -n "$result" ]; then
        echo "The subdomain $subdomain is a $record_type record and points to $result"
    else
        echo "No record found for subdomain $subdomain"
    fi
}

# Main logic
domain=$1
subdomain=$2

if [ -z "$domain" ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

if [ -n "$subdomain" ]; then
    get_subdomain_info "$domain" "$subdomain"
else
    subdomains=("www" "lb-01" "web-01" "web-02")
    for sub in "${subdomains[@]}"; do
        get_subdomain_info "$domain" "$sub"
    done
fi

